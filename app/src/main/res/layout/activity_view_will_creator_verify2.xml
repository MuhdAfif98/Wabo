<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewWill_Creator_Verify2"
    android:background="#FFEDED"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="416dp"
            android:layout_height="70dp"
            android:layout_marginTop="-7dp"
            android:background="#f0d1ad"
            android:elevation="6dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/online"
                app:civ_border_width="0dp"
                android:elevation="5dp"/>

        </com.google.android.material.appbar.AppBarLayout>
        <!--title & description will-->
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:id="@+id/CV2willtitle"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Will Title"
            android:textSize="24dp"
            android:fontFamily="@font/roboto_regular" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_regular" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <!--Penerima will-->
        <TextView
            android:textColor="@color/black"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penerima"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_regular" />

        <TextView
            android:id="@+id/CV2willpenerima"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Will Description"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_regular" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <!--Harta will-->
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Harta"
            android:textSize="22dp"

            android:fontFamily="@font/roboto_regular" />

        <TextView
            android:id="@+id/CV2willjumlah"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Will Description"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <!--Wasiat will-->
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wasiat"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_regular" />

        <TextView
            android:id="@+id/CV2willdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:hint="Wasiat Description"
            android:textSize="22dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <!--Media will-->
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_regular" />

        <TextView
            android:id="@+id/CV2willmedia"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Will Media"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <!--Digital Signature will-->
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digital Signature"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_regular" />

        <TextView
            android:id="@+id/CV2willdigitalsignature"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Will Digtal Description"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_regular" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>


    </LinearLayout>
</ScrollView>